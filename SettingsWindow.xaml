<Window x:Class="OsuTag.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Width="600" 
        Height="700"
        Background="#0A0E14"
        Foreground="#E6E6E8"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0A0E14"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#151921"/>
        <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="#1A1F2B"/>
        <SolidColorBrush x:Key="SurfaceHoverBrush" Color="#1E2432"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#242936"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#5B9FED"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#78B2F2"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6E6E8"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9B9DA3"/>
        <SolidColorBrush x:Key="TextTertiaryBrush" Color="#6B6D75"/>
        
        <Style x:Key="ColorButton" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Settings" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <Button Content="âœ•" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Width="32" 
                        Height="32"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="2">
                <StackPanel>
                    <!-- File Naming Format Section -->
                    <Border Background="{StaticResource SurfaceElevatedBrush}" 
                            CornerRadius="10" 
                            Padding="24" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="File Naming Format" 
                                      FontSize="15" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" 
                                      Margin="0,0,0,10"/>
                            <TextBlock FontSize="11" 
                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                      Margin="0,0,0,16">
                                Use placeholders: &#123;artist&#125;, &#123;title&#125;, &#123;difficulty&#125;
                            </TextBlock>
                            <TextBox x:Name="FileFormatTextBox"
                                    FontSize="13" 
                                    Padding="12,10"
                                    Background="{StaticResource SurfaceBrush}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                    Padding="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Processing Options Section -->
                    <Border Background="{StaticResource SurfaceElevatedBrush}" 
                            CornerRadius="10" 
                            Padding="24" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Processing Options" 
                                      FontSize="15" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" 
                                      Margin="0,0,0,18"/>
                            <CheckBox x:Name="ProcessCoversCheckBox"
                                     Content="Process cover images" 
                                     IsChecked="True"
                                     Foreground="{StaticResource TextPrimaryBrush}" 
                                     FontSize="13" 
                                     Margin="0,0,0,12"/>
                            <CheckBox x:Name="CreateBackupsCheckBox"
                                     Content="Create backup files" 
                                     IsChecked="False"
                                     Foreground="{StaticResource TextPrimaryBrush}" 
                                     FontSize="13" 
                                     Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Scanning Options Section -->
                    <Border Background="{StaticResource SurfaceElevatedBrush}" 
                            CornerRadius="10" 
                            Padding="24" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Scanning Options" 
                                      FontSize="15" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" 
                                      Margin="0,0,0,18"/>
                            <CheckBox x:Name="RememberPathCheckBox"
                                     Content="Remember songs folder path" 
                                     IsChecked="False"
                                     Foreground="{StaticResource TextPrimaryBrush}" 
                                     FontSize="13" 
                                     Margin="0,0,0,12"/>
                            <CheckBox x:Name="SmartScanCheckBox"
                                     Content="Smart Scan (only add new songs)" 
                                     IsChecked="True"
                                     Foreground="{StaticResource TextPrimaryBrush}" 
                                     FontSize="13" 
                                     Margin="0,0,0,12"/>
                            <TextBlock FontSize="11" 
                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                      TextWrapping="Wrap"
                                      Margin="20,0,0,12">
                                When enabled, rescanning will only load new beatmap folders instead of reloading everything
                            </TextBlock>
                            <Button x:Name="ClearCacheButton"
                                    Content="Clear Scan Cache" 
                                    HorizontalAlignment="Left"
                                    Padding="16,8"
                                    Background="{StaticResource SurfaceHoverBrush}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Click="ClearCache_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="Border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceElevatedBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Advanced Section -->
                    <Border Background="{StaticResource SurfaceElevatedBrush}" 
                            CornerRadius="10" 
                            Padding="24">
                        <StackPanel>
                            <TextBlock Text="Preview Settings" 
                                      FontSize="15" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" 
                                      Margin="0,0,0,18"/>
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock Text="Preview Volume" 
                                          FontSize="12" 
                                          Foreground="{StaticResource TextSecondaryBrush}" 
                                          Margin="0,0,0,8"/>
                                <Slider x:Name="PreviewVolumeSlider"
                                       Minimum="0" 
                                       Maximum="100" 
                                       Value="30"
                                       TickFrequency="10"
                                       IsSnapToTickEnabled="True"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1"
                        Content="Cancel" 
                        Width="100"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="{StaticResource SurfaceHoverBrush}"
                        Foreground="{StaticResource TextPrimaryBrush}"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceElevatedBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Grid.Column="2"
                        Content="Save" 
                        Width="100"
                        Height="40"
                        Background="{StaticResource AccentBrush}"
                        Foreground="#ffffff"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Click="Save_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
