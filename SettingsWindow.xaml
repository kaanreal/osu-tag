<Window x:Class="OsuTag.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Width="520" 
        Height="620"
        Background="#0A0E14"
        Foreground="#E6E6E8"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0A0E14"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#12161E"/>
        <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="#181D27"/>
        <SolidColorBrush x:Key="SurfaceHoverBrush" Color="#1E2432"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A3142"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#5B9FED"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#78B2F2"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E6E6E8"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9B9DA3"/>
        <SolidColorBrush x:Key="TextTertiaryBrush" Color="#6B6D75"/>
        
        <!-- Modern Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" 
                                            VerticalAlignment="Center" 
                                            Content="{TemplateBinding Content}"/>
                            <Border x:Name="Track" 
                                    Grid.Column="1"
                                    Width="44" Height="24" 
                                    CornerRadius="12"
                                    Background="#2A3142"
                                    Margin="12,0,0,0"
                                    Cursor="Hand">
                                <Border x:Name="Thumb" 
                                        Width="18" Height="18" 
                                        CornerRadius="9"
                                        Background="#6B6D75"
                                        HorizontalAlignment="Left"
                                        Margin="3,0,0,0">
                                    <Border.RenderTransform>
                                        <TranslateTransform X="0"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Thumb"
                                                           Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                                                           To="20" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="Track"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#5B9FED" Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="Thumb"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#FFFFFF" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Thumb"
                                                           Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                                                           To="0" Duration="0:0:0.15">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="Track"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#2A3142" Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="Thumb"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#6B6D75" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground" 
                                    Height="6" 
                                    CornerRadius="3"
                                    Background="#2A3142"
                                    VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="6" 
                                                        CornerRadius="3"
                                                        Background="{StaticResource AccentBrush}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Cursor="Hand">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBorder"
                                                        Width="18" Height="18" 
                                                        CornerRadius="9"
                                                        Background="#FFFFFF">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                                    </Border.Effect>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ThumbBorder" Property="Width" Value="20"/>
                                                        <Setter TargetName="ThumbBorder" Property="Height" Value="20"/>
                                                        <Setter TargetName="ThumbBorder" Property="CornerRadius" Value="10"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Button Style -->
        <Style x:Key="SectionButton" TargetType="Button">
            <Setter Property="Background" Value="#242936"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2E3440"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Scrollbar Style -->
        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="4"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBorder"
                                                        Background="#3A3F4B"
                                                        CornerRadius="4"
                                                        Margin="1"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ThumbBorder" Property="Background" Value="#5B9FED"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="ThumbBorder" Property="Background" Value="#78B2F2"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0" Margin="0,0,4,0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                      Grid.Column="1"
                                      Style="{StaticResource ModernScrollBar}"
                                      Value="{TemplateBinding VerticalOffset}"
                                      Maximum="{TemplateBinding ScrollableHeight}"
                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border x:Name="RootBorder"
            Background="{StaticResource BackgroundBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12"
            RenderTransformOrigin="0.5,0.5">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚙" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Settings" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="✕" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Width="32" Height="32"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" 
                         Style="{StaticResource ModernScrollViewer}"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    
                    <!-- General Section -->
                    <TextBlock Text="GENERAL" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextTertiaryBrush}" 
                              Margin="0,0,0,12"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Process Cover Images -->
                            <Border Padding="16,14" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <CheckBox x:Name="ProcessCoversCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="True"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Process cover images" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Embed album art in exported MP3 files" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                            
                            <!-- Create Backups -->
                            <Border Padding="16,14">
                                <CheckBox x:Name="CreateBackupsCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="False"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Create backup files" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Save original files before processing" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Audio Section -->
                    <TextBlock Text="AUDIO" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextTertiaryBrush}" 
                              Margin="0,0,0,12"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Preview Volume" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Audio preview playback volume" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                </StackPanel>
                                <TextBlock x:Name="VolumeValueText" 
                                          Grid.Column="1" 
                                          Text="30%" 
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource AccentBrush}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                            <Slider x:Name="PreviewVolumeSlider"
                                   Style="{StaticResource ModernSlider}"
                                   Minimum="0" 
                                   Maximum="100" 
                                   Value="30"
                                   Margin="0,14,0,0"
                                   ValueChanged="VolumeSlider_ValueChanged"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Scanning Section -->
                    <TextBlock Text="SCANNING" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextTertiaryBrush}" 
                              Margin="0,0,0,12"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Remember Path -->
                            <Border Padding="16,14" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <CheckBox x:Name="RememberPathCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="False"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Remember songs folder" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Auto-load last used osu! songs path" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                            
                            <!-- Smart Scan -->
                            <Border Padding="16,14" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <CheckBox x:Name="SmartScanCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="True"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Smart scan" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Only load new beatmaps when rescanning" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                            
                            <!-- Clear Cache Button -->
                            <Border Padding="16,12">
                                <Button Content="Clear Scan Cache" 
                                        Style="{StaticResource SectionButton}"
                                        HorizontalAlignment="Left"
                                        Click="ClearCache_Click"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Companella Section -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                  Text="COMPANELLA! INTEGRATION" 
                                  FontSize="11" 
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextTertiaryBrush}" 
                                  VerticalAlignment="Center"/>
                        <Button Grid.Column="2"
                                Content="↓ Download"
                                Click="DownloadCompanella_Click"
                                Background="Transparent"
                                Foreground="{StaticResource AccentBrush}"
                                BorderThickness="0"
                                FontSize="11"
                                Cursor="Hand"
                                Padding="8,4"/>
                    </Grid>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Margin="0,0,0,20">
                        <StackPanel>
                            <!-- Sort by Most Played -->
                            <Border Padding="16,14" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <CheckBox x:Name="SortByMostPlayedCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="False"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Sort by most played" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Use Companella! session data for sorting" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                            
                            <!-- Companella Path -->
                            <Border Padding="16,14">
                                <StackPanel>
                                    <TextBlock Text="Data folder path" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                                Background="#12161E" 
                                                CornerRadius="6" 
                                                Padding="12,10"
                                                Margin="0,0,8,0">
                                            <TextBox x:Name="CompanellaPathTextBox"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource TextPrimaryBrush}"
                                                    FontSize="12"
                                                    VerticalAlignment="Center"/>
                                        </Border>
                                        <Button Grid.Column="1"
                                                Content="Browse" 
                                                Style="{StaticResource SectionButton}"
                                                Click="BrowseCompanellaPath_Click"/>
                                    </Grid>
                                    <TextBlock x:Name="CompanellaStatusText"
                                              FontSize="11" 
                                              Foreground="{StaticResource TextTertiaryBrush}" 
                                              TextWrapping="Wrap"
                                              Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Updates Section -->
                    <TextBlock Text="UPDATES" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextTertiaryBrush}" 
                              Margin="0,0,0,12"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Margin="0,0,0,0">
                        <StackPanel>
                            <!-- Auto Check Updates -->
                            <Border Padding="16,14" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                                <CheckBox x:Name="CheckForUpdatesCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="True"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Check for updates on startup" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Automatically check GitHub for new releases" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                            
                            <!-- Manual Check Button -->
                            <Border Padding="16,12">
                                <StackPanel>
                                    <Button Content="Check for updates now" 
                                            Style="{StaticResource SectionButton}"
                                            HorizontalAlignment="Left"
                                            Click="CheckForUpdates_Click"/>
                                    <TextBlock x:Name="UpdateStatusText"
                                              FontSize="11" 
                                              Foreground="{StaticResource TextTertiaryBrush}" 
                                              TextWrapping="Wrap"
                                              Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Privacy Section -->
                    <TextBlock Text="PRIVACY" 
                              FontSize="11" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextTertiaryBrush}" 
                              Margin="0,20,0,12"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="10" Margin="0,0,0,0">
                        <StackPanel>
                            <!-- Telemetry Toggle -->
                            <Border Padding="16,14">
                                <CheckBox x:Name="TelemetryEnabledCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="True"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Send anonymous usage statistics" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Help improve osu!tag by sharing anonymous data" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                        <TextBlock Text="No personal data is ever collected" FontSize="10" Foreground="{StaticResource AccentBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                            
                            <!-- Discord RPC Toggle -->
                            <Border Padding="16,14" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                                <CheckBox x:Name="DiscordRpcEnabledCheckBox"
                                         Style="{StaticResource ToggleSwitch}"
                                         IsChecked="True"
                                         Foreground="{StaticResource TextPrimaryBrush}" 
                                         FontSize="13">
                                    <StackPanel>
                                        <TextBlock Text="Show activity in Discord" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Display what you're doing in osu!tag on Discord" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                        <TextBlock Text="Requires Discord application running" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </CheckBox>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,1,0,0"
                    Margin="-24,20,-24,0"
                    Padding="24,16,24,0">
                <Grid>
                    <TextBlock Text="v1.0.0" 
                              x:Name="VersionText"
                              FontSize="11" 
                              Foreground="{StaticResource TextTertiaryBrush}"
                              VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Width="90" Height="36"
                                Margin="0,0,10,0"
                                Background="#242936"
                                Foreground="{StaticResource TextPrimaryBrush}"
                                BorderThickness="0"
                                FontSize="13"
                                Cursor="Hand"
                                Click="Close_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#2E3440"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Save" 
                                Width="90" Height="36"
                                Background="{StaticResource AccentBrush}"
                                Foreground="#ffffff"
                                BorderThickness="0"
                                FontSize="13"
                                FontWeight="Medium"
                                Cursor="Hand"
                                Click="Save_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
